@model fomka_web.Models.TaskVm
@{
    ViewBag.Title = "Task";
}

<h2>Task #@Model.Task.Id</h2>

<div class="row">
    <div class="col-lg-2">
        <div class="row">
            <h3>Завдання</h3>
        </div>
        <div class="row">
            <h4>@Model.Task.Title</h4>
        </div>
        <br />
        <div class="row">
            <p>Мова програмування @Model.Task.ProgrammingLanguage.Title</p>
        </div>
        <div class="row">
            <h3>Опис завдання</h3>
        </div>
        <div class="row">
            <p>@Model.Task.Description</p>
        </div>
        <div class="row">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmationModal">
                Здати завдання
            </button>
        </div>
    </div>
    <div class="col-lg-5">
        <h4>Розставте блоки в правильному порядку</h4>
        @foreach (var block in Model.SelectedBlocks)
        {
            <div class="card">
                <div class="card-body">
                    <div class="row mg-2">
                        <a class="btn btn-danger removeBlock codeblock" onclick="remove(@block.BlockID,this)">
                            <pre>@block.Code</pre>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-5">
        <h4>Доступні блоки:</h4>
        @foreach (var block in Model.SequenceOfBlocks)
        {
            if (!block.selected)
            {
                <div class="card">
                    <div class="card-body">
                        <div class="row mg-2">
                            <a class="btn btn-success addBlock codeblock" value="Add" onclick="add(@block.BlockID, this)">
                                <pre>@block.Code</pre>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        @Html.HiddenFor(m => m.Task.Id, new { @id = "taskId" })
        @Html.HiddenFor(m => m.selection, new { @id = "selection" })
        @Html.HiddenFor(m => m.blocks, new { @id = "blocks" })

    </div>
</div>

@using (Html.BeginForm("Submit", "Tasks", FormMethod.Post))
{
    <div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="row">
                        <div class="col col-sm-6">
                            <h3 class="modal-title">Завдання: @Model.Task.Title</h3>
                        </div>
                        <div class="col" style="padding: 10px; padding-right: 20px;">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <p>Бажаєте завершити завдання і здати на оцінювання?</p>
                </div>
                <div class="modal-footer">
                    <div class="row" style="padding-right: 20px">
                        @Html.HiddenFor(m => m.Task.Id)
                        <input type="submit" class="btn btn-primary" value="Здати"/>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Відміна</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript" src="~/Scripts/Tasks.js"></script>
<script type="text/javascript" src="~/Scripts/jsCookie.js"></script>
